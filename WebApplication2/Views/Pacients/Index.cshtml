@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form class="form-horizontal">
    <div class="input-group input-group-lg col-sm-10">
        <label for="search" class="sr-only">Введите имя пациента</label>
        <div class="col-sm-10">
            <input type="text" placeholder="Введите имя пациента" name="name" class="col-sm-10 form-control" id="search" />
        </div>
        <input type='button' id="submit" value='Поиск' class="btn" />
    </div>

</form>
<div id="results"></div>
<script type="text/javascript">
        $(document).ready(function () {
            //$('#submit').cha
            $('#submit').click(function (e) {
                e.preventDefault();
                var name = $('#search').val();
                name = name.replace(new RegExp(" ", 'g'), "%20");
                $('#results').load("/Pacients/SearchByName?name=" + name);
            });
            $('#search').keypress(function (event) {
                if (event.which == 13) {
                    event.preventDefault();
                }
                var name = $('#search').val();
                name = name.replace(new RegExp(" ", 'g'), "%20");
                $('#results').load("/Pacients/SearchByName?name=" + name);
            });
        });
</script>
