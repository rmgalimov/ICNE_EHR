
@model WebApplication2.Models.Debut
    <div class="@String.Format("DebutsDiv{0}", Model.ID)">
        <div class="row">
            <div class="col-md-4">
                <strong>
                    @Html.DisplayFor(model => model.type.name)
                </strong>
            </div>
            <div class="col-md-6">
                <p>
                    @Html.DisplayFor(model => model.description)
                </p>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success btn-sm" onclick="LoadEditForm('Debuts', @Model.ID)">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button class="btn btn-danger btn-sm" onclick="Delete('Debuts', @Model.ID)">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
        <div class="row alert alert-info" style="margin-top:10px">
            <div class="col-md-3">
                <h4><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Продолжительность:</h4>
                <strong>
                    @Html.DisplayNameFor(model => model.minutes): @Html.DisplayFor(model => model.minutes) <br />
                    @Html.DisplayNameFor(model => model.seconds): @Html.DisplayFor(model => model.seconds) 
                </strong>
            </div>
            <div class="col-md-3">
                <h4><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Возраст:</h4>
                <strong>
                    @Html.DisplayNameFor(model => model.year): @Html.DisplayFor(model => model.year)  <br />
                    @Html.DisplayNameFor(model => model.month): @Html.DisplayFor(model => model.month) 
                </strong>
            </div>
            <div class="col-md-6">
                <h4><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> @Html.DisplayNameFor(model => model.comments):</h4>
                <p>@Html.DisplayFor(model => model.comments)</p>
            </div>
        
  
        </div>
        </div>
<hr />
