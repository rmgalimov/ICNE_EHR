@model WebApplication2.Models.newReview
@using WebApplication2.Models
@{ 
    Review review = Model.review;
}
@using (Html.BeginForm("Create", "Reviews", new{ visitID = Model.visitID}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            
            <div class="col-md-12">
                @Html.EditorFor(model => model.review.comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.review.comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
    <hr>
}