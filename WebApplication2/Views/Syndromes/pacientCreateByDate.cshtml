
@model WebApplication2.Models.newSyndrome
@using WebApplication2.Models
@using (Html.BeginForm("Create", "Syndromes", FormMethod.Post, new { id = "SyndromesDateCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.visitID)
    @Html.HiddenFor(model => model.num)
    @Html.HiddenFor(model => model.pacientID)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="">
            <div class="row">
                <div class="col-md-5">
                    <strong>
                        @Html.DropDownListFor(model => model.syndrome.type.ID, new SelectList(Model.eventTypes, "ID", "name"), new { @class = "form-control" })
                    </strong>
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.initialDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-2">
                    <a onclick="PostDateCreateForm('Syndromes', @Model.pacientID)" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>

                </div>
            </div>
            <div class="row alert alert-info" style="margin-top:10px">
                <div class="col-md-3">
                    <h4><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Продолжительность:</h4>
                    <strong>
                        @Html.EditorFor(model => model.syndrome.minutes, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.minutes) } })
                        @Html.EditorFor(model => model.syndrome.seconds, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.seconds) } })
                    </strong>
                </div>
                <div class="col-md-3">
                    <h4><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Возраст:</h4>
                    <strong>
                        @Html.EditorFor(model => model.syndrome.year, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.year) } })
                        @Html.EditorFor(model => model.syndrome.month, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.month) } })
                        @Html.EditorFor(model => model.syndrome.week, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.week) } })
                        @Html.EditorFor(model => model.syndrome.day, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.syndrome.day) } })
                    </strong>
                </div>
                <div class="col-md-6">
                    <h4><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> @Html.DisplayNameFor(model => model.syndrome.comments):</h4>
                    <p>@Html.EditorFor(model => model.syndrome.comments, new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>


            </div>
        </div>

    </div>
}