
@model WebApplication2.Models.newDiagnosis
@using WebApplication2.Models
@using (Html.BeginForm("Create", "Diagnoses", FormMethod.Post, new { id = "DiagnosesDateCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.visitID)
    @Html.HiddenFor(model => model.num)
    @Html.HiddenFor(model => model.pacientID)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.diagnosis.type.ID, new SelectList(Model.eventTypes, "ID", "name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.diagnosis.type.ID, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                @Html.EditorFor(model => model.initialDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">

                <a onclick="PostDateCreateForm('Diagnoses', @Model.pacientID)" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            </div>
            <div class="col-md-6 col-md-offset-4">
                @Html.EditorFor(model => model.diagnosis.comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diagnosis.comments, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

}