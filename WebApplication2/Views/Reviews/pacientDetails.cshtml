
@model WebApplication2.Models.Review

  <div class="@String.Format("ReviewsDiv{0}", Model.ID)">
    <div class="row">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.comments)
            </div>
        <div class="col-md-2">
            <button class="btn btn-success btn-sm" onclick="LoadEditForm('Reviews', @Model.ID)">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button class="btn btn-danger btn-sm" onclick="Delete('Reviews', @Model.ID)">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>
<hr />
