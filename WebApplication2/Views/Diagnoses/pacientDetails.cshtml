@model WebApplication2.Models.Diagnosis

<div class="@String.Format("DiagnosesDiv{0}", Model.ID) row">
    <div class="col-md-4">
        <strong>
            @Html.DisplayFor(model => model.type.name)
        </strong>
    </div>
    <div class="col-md-6">
        <p>
            @Html.DisplayFor(model => model.comments)
        </p>
    </div>
    <div class="col-md-2">
        <button class="btn btn-success btn-sm" onclick="LoadEditForm('Diagnoses', @Model.ID)">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
        <button class="btn btn-danger btn-sm" onclick="Delete('Diagnoses', @Model.ID)">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
    </div>

</div>
<hr />