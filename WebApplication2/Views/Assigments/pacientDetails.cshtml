
@model WebApplication2.Models.Assigment

    <div class="@String.Format("AssigmentsDiv{0}", Model.ID)">
        <div class="row">
            <div class="col-md-4">
                <strong>
                    @Html.DisplayFor(model => model.type.name)
                </strong>
            </div>
            <div class="col-md-6">
                <p>
                    @Html.DisplayFor(model => model.medicine)
                </p>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success btn-sm" onclick="LoadEditForm('Assigments', @Model.ID)">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button class="btn btn-warning btn-sm" onclick="Cancel('Assigments', @Model.ID)">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
                <button class="btn btn-danger btn-sm" onclick="Delete('Assigments', @Model.ID)">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
        <div class="row alert alert-info" style="margin-top:10px">
            <div class="col-md-4">
                <h4><span class="glyphicon glyphicon-tint" aria-hidden="true"></span> Назначение:</h4>
                <strong>
                    @Html.DisplayNameFor(model => model.weight):
                </strong> @Html.DisplayFor(model => model.weight) <br />
                <strong>
                    @Html.DisplayNameFor(model => model.dose): </strong>
                @Html.DisplayFor(model => model.dose) <br />
                <strong>@Html.DisplayNameFor(model => model.inADay):</strong>
                 @Html.DisplayFor(model => model.inADay) <br />

</div>
            
            <div class="col-md-8">
                <h4><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> @Html.DisplayNameFor(model => model.comments):</h4>
                <p>@Html.DisplayFor(model => model.comments)</p>
            </div>



        </div>
    
    
   
</div><hr />