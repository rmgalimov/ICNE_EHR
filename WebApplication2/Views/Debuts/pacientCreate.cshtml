@model WebApplication2.Models.newDebut
@using WebApplication2.Models
@using (Html.BeginForm("Create", "Debuts", FormMethod.Post, new { id = "DebutsCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.visitID)
    @Html.HiddenFor(model => model.num)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="">
            <div class="row">
                <div class="col-md-4">
                    <strong>
                        @Html.DropDownListFor(model => model.debut.type.ID, new SelectList(Model.eventTypes, "ID", "name"), new { @class = "form-control" })
                    </strong>
                </div>
                <div class="col-md-6">
                    <p>
                        @Html.EditorFor(model => model.debut.description, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.debut.description) } })
                    </p>
                </div>
                <div class="col-md-2">
                    <a onclick="PostCreateForm('Debuts', @Model.num)" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>

                </div>
            </div>
            <div class="row alert alert-info" style="margin-top:10px">
                <div class="col-md-3">
                    <h4><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Продолжительность:</h4>
                    <strong>
                        @Html.EditorFor(model => model.debut.minutes, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.debut.minutes) } })
                        @Html.EditorFor(model => model.debut.seconds, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.debut.seconds) } })
                    </strong>
                </div>
                <div class="col-md-3">
                    <h4><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Возраст:</h4>
                    <strong>
                        @Html.EditorFor(model => model.debut.year, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.debut.year) } })
                        @Html.EditorFor(model => model.debut.month, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.debut.month) } })
                    </strong>
                </div>
                <div class="col-md-6">
                    <h4><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> @Html.DisplayNameFor(model => model.debut.comments):</h4>
                    <p>@Html.EditorFor(model => model.debut.comments, new { htmlAttributes = new { @class = "form-control" } })</p>
                </div>


            </div>
        </div>

    </div>
}